{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "dominara",
  "version": "0.1.4",
  "identifier": "com.dominara.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "updater",
        "title": "Dominara Updates",
        "width": 600,
        "height": 400,
        "visible": true,
        "url": "/updates",
        "decorations": false,
        "transparent": true,
        "center": true,
        "resizable": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "theme": "Dark"
      },
      {
        "label": "main",
        "title": "dominara",
        "resizable": false,
        "width": 800,
        "height": 600,
        "fullscreen": true,
        "visible": false,
        "url": "/"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
  },
  "plugins": {
    "updater": {
      "active": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDlGQzdEMDYzNzQ2Mjc5QjYKUldTMmVXSjBZOURIbjI5NlFqeFZQNmtNRlJuOHFJSmRINXdRc3NxZys2WWwrQnJjaUZ5ZW1Tcm4K",
      "endpoints": ["https://github.com/eloybercast/dominara/releases/latest/download/latest.json"],
      "windows": {
        "installMode": "quiet"
      }
    }
  }
}
